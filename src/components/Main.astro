<style>
  /* Import Recursive font */
  @import url('https://fonts.googleapis.com/css2?family=Recursive:slnt,wght,CASL,CRSV,MONO@-15..0,300..800,0..1,0..1,0..1&display=swap');

  /* CSS Variables for font settings */
  :root {
    --font-casual: 0;        /* CASL: 0 = linear, 1 = casual */
    --font-weight: 400;      /* Weight: 300-800 */
    --font-slant: 0deg;      /* Slant: 0 to -15 degrees */
    --font-mono: 1;          /* MONO: 0 = normal, 1 = monospace */
    --font-cursive: 0;       /* CRSV: 0 = normal, 1 = cursive */
    --bg-color: #EEEEEE;
    --text-color: #222222;
    --accent-color: #555555;
    --link-color: #0000EE;
    --link-visited: #551A8B;
    --border-color: #222222;
    --max-width: 650px;
  }

  /* Global styles */
  .portfolio {
    font-family: 'Recursive', sans-serif;
    font-variation-settings:
      'CASL' var(--font-casual),
      'wght' var(--font-weight),
      'slnt' var(--font-slant),
      'MONO' var(--font-mono),
      'CRSV' var(--font-cursive);
    background-color: var(--bg-color);
    color: var(--text-color);
    line-height: 1.5;
    padding: 1rem;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  /* Header styles */
  header h1 {
    font-variation-settings:
      'MONO' 1,
      'wght' 700;
    margin: 0;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
  }

  /* Navigation */
  nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    gap: 1.5rem;
    margin: 1rem 0;
  }

  nav a {
    font-variation-settings:
      'MONO' 1,
      'wght' 500;
    text-decoration: none;
    color: var(--link-color);
  }

  nav a:hover {
    text-decoration: underline;
  }

  /* Section styling */
  section {
    margin-bottom: 2rem;
  }

  h2 {
    font-variation-settings:
      'MONO' 1,
      'wght' 600;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.25rem;
  }

  /* Project list styling */
  .project-list {
    list-style: none;
    padding: 0;
  }

  .project-list li {
    margin-bottom: 1.5rem;
    border-left: 3px solid var(--accent-color);
    padding-left: 1rem;
  }

  .project-list h3 {
    margin: 0 0 0.5rem 0;
    font-variation-settings: 'MONO' 1, 'wght' 600;
  }

  .project-list p {
    margin: 0.5rem 0;
  }

  /* Links styling */
  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:visited {
    color: var(--link-visited);
  }

  a:hover {
    text-decoration: underline;
  }

  /* Skills list styling */
  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    padding-left: 0;
    list-style-position: inside;
  }

  .skills-list li {
    background: rgba(0,0,0,0.05);
    padding: 0.35rem 0.75rem;
    border-radius: 3px;
    display: inline-block;
  }

  /* Contact list styling */
  .contact-list {
    display: flex;
    gap: 1rem;
    padding-left: 0;
    list-style: none;
  }

  .contact-list li {
    background: rgba(0,0,0,0.05);
    padding: 0.5rem 1rem;
    border-radius: 3px;
  }

  /* Terminal style boxes */
  .box {
    background: #111;
    color: #DDD;
    padding: 1rem;
    border: 1px solid var(--border-color);
    white-space: pre-wrap;
    overflow-x: auto;
    font-variation-settings: 'MONO' 1, 'wght' 400;
  }

  .box a {
    color: #88AAFF;
  }

  .box a:visited {
    color: #CC88FF;
  }

  .cmd {
    color: #AAFFAA;
    font-variation-settings: 'MONO' 1, 'wght' 500;
  }

  /* Code styling */
  code {
    font-variation-settings: 'MONO' 1, 'wght' 400;
    background: rgba(0,0,0,0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
  }

  /* Footer styling */
  footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
    font-size: 0.9rem;
    text-align: center;
  }

  .mono {
    font-variation-settings: 'MONO' 1;
  }

  /* Media queries for responsive design */
  @media (max-width: 600px) {
    :root {
      --font-weight: 450; /* Slightly increase weight on smaller screens */
    }

    nav ul {
      flex-direction: column;
      gap: 0.5rem;
    }

    .portfolio {
      padding: 0.75rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color: #222222;
      --text-color: #EEEEEE;
      --accent-color: #AAAAAA;
      --link-color: #88AAFF;
      --link-visited: #CC88FF;
      --border-color: #555555;
    }

    .box {
      background: #000;
      border-color: #444;
    }

    code {
      background: rgba(255,255,255,0.1);
    }

    .skills-list li {
      background: rgba(255,255,255,0.1);
    }

    .contact-list li {
      background: rgba(255,255,255,0.1);
    }
  }
</style>