---
import Layout from '@layouts/Layout.astro';
import Footer from '@components/Footer.astro';
import { slide } from 'astro:transitions';

// Define page metadata with types
const pageTitle: string = "Contact | vermillionpaws";
---

<Layout title={pageTitle}>
  <main class="min-h-screen pt-24 pb-20">
    <div class="container max-w-4xl mx-auto px-4 md:px-6">
      <div transition:animate={slide({ duration: '0.5s' })}>
        <div class="mb-12">
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-6 flex items-center">
            <span class="text-neutral-500">~/</span>contact
          </h1>

          <div class="h-1 w-24 bg-gradient-to-r from-blue-600 to-purple-600"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Contact form -->
          <div class="space-y-8">
            <div class="prose prose-invert max-w-none">
              <p class="text-lg text-neutral-300 mb-8">
                Feel free to reach out if you want to chat about code... or just say hi!
                I'm not really looking for big collaborations right now though.
              </p>
            </div>

            <form id="contact-form" class="space-y-5">
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-400 mb-1">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-white/[0.03] border border-white/10 rounded-md text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition-colors"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-neutral-400 mb-1">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-white/[0.03] border border-white/10 rounded-md text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition-colors"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-neutral-400 mb-1">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 bg-white/[0.03] border border-white/10 rounded-md text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none transition-colors resize-none"
                ></textarea>
              </div>

              <button
                type="submit"
                class="btn bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 rounded-md px-6 py-3 text-sm font-medium transition-all text-white w-full"
              >
                Send Message
              </button>

              <p id="form-status" class="text-sm text-center hidden"></p>
            </form>
          </div>

          <!-- Contact info and links -->
          <div class="space-y-8">
            <div class="bg-white/[0.03] backdrop-blur-sm border border-white/5 rounded-lg p-6">
              <h2 class="text-xl font-semibold mb-6 text-white">Find Me Online</h2>

              <ul class="space-y-5">
                <li class="flex items-start">
                  <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-white">Email</h3>
                    <p class="mt-1">
                      <a href="mailto:dev@fault.wtf" class="text-neutral-400 hover:text-blue-400 transition-colors">
                        dev@fault.wtf
                      </a>
                    </p>
                  </div>
                </li>

                <li class="flex items-start">
                  <div class="flex-shrink-0 h-10 w-10 rounded-full bg-purple-500/20 flex items-center justify-center text-purple-400 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-white">Discord</h3>
                    <p class="mt-1">
                      <span class="text-neutral-400">@vermillionpaws</span>
                    </p>
                  </div>
                </li>

                <li class="flex items-start">
                  <div class="flex-shrink-0 h-10 w-10 rounded-full bg-green-500/20 flex items-center justify-center text-green-400 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-white">Website</h3>
                    <p class="mt-1">
                      <a href="https://fault.wtf/" class="text-neutral-400 hover:text-green-400 transition-colors">
                        fault.wtf
                      </a>
                    </p>
                  </div>
                </li>

                <li class="flex items-start">
                  <div class="flex-shrink-0 h-10 w-10 rounded-full bg-neutral-500/20 flex items-center justify-center text-neutral-400 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-white">GitHub</h3>
                    <p class="mt-1">
                      <a href="https://github.com/vermillionpaws" target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-white transition-colors">
                        @vermillionpaws
                      </a>
                    </p>
                  </div>
                </li>
              </ul>
            </div>

            <!-- Availability status -->
            <div class="bg-white/[0.03] backdrop-blur-sm border border-white/5 rounded-lg p-6">
              <div class="flex items-center mb-4">
                <span class="w-3 h-3 bg-green-500 rounded-full mr-2 animate-pulse"></span>
                <h3 class="text-lg font-medium text-white">Just Vibing</h3>
              </div>
              <p class="text-neutral-400 text-sm">
                I'm mostly focused on personal projects right now, but I'm always down to chat about code or swap ideas!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Simple form handling with animation
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('contact-form');
    const formStatus = document.getElementById('form-status');

    if (form && formStatus) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();

        // Show sending status
        formStatus.textContent = 'Sending message...';
        formStatus.classList.remove('hidden', 'text-green-500', 'text-red-500');
        formStatus.classList.add('text-blue-400');

        // Simulate form submission (you would replace this with actual form submission)
        setTimeout(() => {
          // Success state
          formStatus.textContent = 'Your message has been sent successfully!';
          formStatus.classList.remove('text-blue-400');
          formStatus.classList.add('text-green-500');

          // Reset form
          form.reset();

          // Hide the message after some time
          setTimeout(() => {
            formStatus.classList.add('hidden');
          }, 5000);
        }, 1500);
      });
    }

    // Input animation effects
    const inputs = document.querySelectorAll('input, textarea');

    inputs.forEach(input => {
      input.addEventListener('focus', () => {
        input.parentElement.classList.add('scale-[1.01]');
        input.style.transition = 'all 0.2s ease';
      });

      input.addEventListener('blur', () => {
        input.parentElement.classList.remove('scale-[1.01]');
      });
    });
  });
</script>